{
    "angularCompilerOptions": {
        "debug": true
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "../*.ts",
        "../src"
    ]
}